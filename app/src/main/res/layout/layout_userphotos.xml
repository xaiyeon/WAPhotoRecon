<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"

    >

    <RelativeLayout
        android:id="@+id/layout_userphotos_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout_usernameoremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_userphotos_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_below="@+id/layout_userphotos_1"
        >

        <TextView
            android:id="@+id/layout_createdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_userphotos_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_below="@+id/layout_userphotos_2"
        >

        <ImageView
            android:id="@+id/layout_userimage"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            android:focusable="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_userphotos_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_userphotos_3"
        >

        <TextView
            android:id="@+id/layout_imgname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_userphotos_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_userphotos_4"
        >

        <TextView
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/layout_userphotos_6"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_userphotos_5"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        >


    </RelativeLayout>







</RelativeLayout>