<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/camfrag_lay1"
        >
        <TextView
            android:id="@+id/camera_txtview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="16"
            android:fontFamily="sans-serif"
            android:inputType="none"
            android:lineSpacingExtra="8sp"
            android:text="Welcome to Camera!"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:typeface="normal" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/camfrag_lay1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/camfrag_imageView"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/camera_photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Take Photo"
        android:layout_marginStart="13dp"
        android:layout_above="@+id/imagedesc_editTxt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/add_firebasephoto_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Upload to FireBase"
        android:layout_alignBaseline="@+id/camera_photo_btn"
        android:layout_alignBottom="@+id/camera_photo_btn"
        android:layout_toEndOf="@+id/camera_photo_btn"
        android:layout_marginStart="13dp" />

    <EditText
        android:id="@+id/imagedesc_editTxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="My photo!"
        android:layout_marginBottom="91dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>