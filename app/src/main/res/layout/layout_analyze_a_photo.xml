<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/background_border"
    android:padding="10dp"
    >

    
    <RelativeLayout
        android:id="@+id/lay_analyze_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >


        <RelativeLayout
            android:id="@+id/lay_analyze_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/lay_analyze_imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"

                />

            <TextView
                android:textStyle="italic"
                android:id="@+id/lay_analyze_name_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_toRightOf="@+id/lay_analyze_imageView"
                />

            <TextView
                android:textStyle="bold"
                android:id="@+id/lay_analyze_title_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_toRightOf="@+id/lay_analyze_imageView"
                android:layout_below="@+id/lay_analyze_name_txtview"
                />

            <TextView
                android:id="@+id/lay_analyze_date_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lay_analyze_imageView"
                android:layout_below="@+id/lay_analyze_title_txtview"
                android:text="Date: "
                />

            <TextView
                android:id="@+id/lay_analyze_devicename_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lay_analyze_imageView"
                android:layout_below="@+id/lay_analyze_date_txtview"
                android:text="Device: "
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/lay_analyze_top"
            android:id="@+id/lay_analyze_mida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:gravity="left"
                android:id="@+id/lay_analyze_data_info_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Info: "
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_analyze_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_analyze_mida"
            >


            <TextView
                android:id="@+id/lay_analyze_isanalyzed_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyzed?: " />


            <Button
                android:id="@+id/lay_analyze_analyzeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:text="Analyze" />

        </RelativeLayout>



    </RelativeLayout>
    
    
    
    
    
</RelativeLayout>