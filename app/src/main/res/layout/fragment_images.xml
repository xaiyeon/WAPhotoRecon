<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunkoiwish.waphotorecon.Images.ImagesFragment">

    <RelativeLayout
        android:id="@+id/frag_mainimagetop_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/homeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="16"
            android:fontFamily="sans-serif"
            android:inputType="none"
            android:lineSpacingExtra="8sp"
            android:text="Your Analyzed Images"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:typeface="normal" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/frag_images_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frag_mainimagetop_1"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/FireBaseDB_RecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/frag_images_2"
        android:layout_width="match_parent"
        android:layout_below="@+id/frag_images_top"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >


    </RelativeLayout>

</RelativeLayout>