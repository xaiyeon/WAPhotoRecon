<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >

    <RelativeLayout
        android:background="@color/White"
        android:id="@+id/lay_analyzedphoto_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/lay_anau_datainfotxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:gravity="left"
                android:text="Data Info:" />

            <TextView
                android:id="@+id/lay_anau_analyzeddate_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_below="@+id/lay_anau_datainfotxtview"
                android:text="Date: " />

            <TextView
                android:id="@+id/lay_anau_location_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lay_anau_analyzeddate_txtview"
                android:text="Location:" />

            <TextView
                android:id="@+id/lay_anau_status_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lay_anau_location_txtview"
                android:text="Status: " />

            <TextView
                android:id="@+id/lay_anau_devicename_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lay_anau_status_txtview"
                android:text="Device: " />

            <ImageView
                android:layout_below="@+id/lay_anau_devicename_txtview"
                android:id="@+id/lay_anau_imageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center" />

            <TextView
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/lay_anau_thingtitle_txtview"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_anau_imageView"
                android:textAlignment="center"
                android:text="Analysis" />

            <TextView
                android:id="@+id/lay_anau_tags_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lay_anau_thingtitle_txtview"
                android:text="Tags: " />

            <TextView
                android:id="@+id/lay_anau_description_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lay_anau_tags_txtview"
                android:text="Description: " />


            <TextView
                android:id="@+id/lay_anau_isadultracy_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lay_anau_description_txtview"
                android:text="Adult Content?: " />

            <TextView
                android:id="@+id/lay_anau_agegendersmile_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lay_anau_isadultracy_txtview"
                android:text="Age Gender Smile?: " />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>